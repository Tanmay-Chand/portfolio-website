<section id='homeContainer'>
    <a target='_self' href='#contactMe'>
        <div id='introBox'>
            <img class='row' id="creator-image" alt='{{ meta.name }}' src="./assets/images/creator-image.jpg" />
            <div id='introText'>
                <b>{{ meta.name }}</b>, <i>{{ meta.profession }}</i>
                <span style="text-align: center; width: 50%;">
                    <hr></span>
            </div>
            <div onmouseover="site.home.showSnacks()" id='introQuote'>
                <div>Rolling the dice...</div>
            </div>
        </div>
    </a>
    <div id="arrowContainer">
        <div class="arrow"></div>
        <div class="arrow"></div>
        <div class="arrow"></div>
        <span class="arrowText">Scroll down</span>
    </div>
    <div id="snackbar">Refresh for more wisdom</div>
</section>